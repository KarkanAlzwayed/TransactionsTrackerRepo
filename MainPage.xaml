<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransactionsTracker.MainPage">
    <StackLayout Margin="20">
        <Entry x:Name="CategoryEntry" Placeholder="Enter Category (e.g., Groceries)" />
        <Entry x:Name="AmountEntry" Placeholder="Enter Amount" Keyboard="Numeric" />
        <Button Text="Add Transaction" Clicked="OnSubmitTransactionClicked" />
    </StackLayout>
</ContentPage>
